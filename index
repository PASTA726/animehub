    <script>
        // ========== GLOBAL DEĞİŞKENLER ==========
        let currentPage = 1;
        let currentSection = 'popular';
        let currentCategory = 'all';
        let totalPages = 100;
        let favorites = JSON.parse(localStorage.getItem('animeFavorites')) || [];
        let watchHistory = JSON.parse(localStorage.getItem('watchHistory')) || [];

        // ========== DOM ELEMENTLERİ ==========
        const elements = {
            searchInput: document.getElementById('searchInput'),
            searchBtn: document.getElementById('searchBtn'),
            animeGrid: document.getElementById('animeGrid'),
            loading: document.getElementById('loading'),
            pagination: document.getElementById('pagination'),
            prevBtn: document.getElementById('prevBtn'),
            nextBtn: document.getElementById('nextBtn'),
            currentPage: document.getElementById('currentPage'),
            navButtons: document.querySelectorAll('.nav-btn'),
            categoryButtons: document.querySelectorAll('.category-btn'),
            animeModal: document.getElementById('animeModal'),
            closeModal: document.getElementById('closeModal'),
            modalTitle: document.getElementById('modalTitle'),
            modalBody: document.getElementById('modalBody')
        };

        // ========== İZLEME PLATFORMLARI ==========
        const WATCH_PLATFORMS = {
            'Crunchyroll': {
                url: 'https://www.crunchyroll.com/search?q=',
                icon: 'fas fa-play-circle',
                color: 'crunchyroll'
            },
            'Netflix': {
                url: 'https://www.netflix.com/search?q=',
                icon: 'fas fa-film',
                color: 'netflix'
            },
            'Funimation': {
                url: 'https://www.funimation.com/search/?q=',
                icon: 'fas fa-tv',
                color: 'funimation'
            },
            '9anime': {
                url: 'https://9anime.to/search?keyword=',
                icon: 'fas fa-video',
                color: 'nineanime'
            },
            'Gogoanime': {
                url: 'https://gogoanime3.co/search.html?keyword=',
                icon: 'fas fa-play',
                color: 'gogoanime'
            }
        };

        // ========== API FONKSİYONLARI ==========
        async function fetchAnimeData(section = 'popular', page = 1) {
            try {
                showLoading(true);
                
                let url;
                switch(section) {
                    case 'top':
                        url = `https://api.jikan.moe/v4/top/anime?page=${page}&limit=24`;
                        break;
                    case 'seasonal':
                        const now = new Date();
                        const year = now.getFullYear();
                        const season = getCurrentSeason();
                        url = `https://api.jikan.moe/v4/seasons/${year}/${season}?page=${page}&limit=24`;
                        break;
                    case 'movies':
                        url = `https://api.jikan.moe/v4/anime?page=${page}&limit=24&type=movie`;
                        break;
                    case 'popular':
                    default:
                        url = `https://api.jikan.moe/v4/anime?page=${page}&limit=24&order_by=popularity`;
                }
                
                console.log('Fetching:', url);
                
                const response = await fetch(url);
                
                if (!response.ok) {
                    throw new Error(`API Hatası: ${response.status}`);
                }
                
                const data = await response.json();
                
                // Rate limiting için bekle
                await new Promise(resolve => setTimeout(resolve, 400));
                
                return {
                    anime: data.data || [],
                    pagination: data.pagination || { last_visible_page: 100 }
                };
                
            } catch (error) {
                console.error('API Hatası:', error);
                showError('Anime verileri alınamadı. Lütfen tekrar deneyin.');
                return { anime: [], pagination: { last_visible_page: 100 } };
            } finally {
                showLoading(false);
            }
        }

        async function searchAnime(query, page = 1) {
            try {
                showLoading(true);
                
                const url = `https://api.jikan.moe/v4/anime?q=${encodeURIComponent(query)}&page=${page}&limit=24`;
                
                const response = await fetch(url);
                
                if (!response.ok) {
                    throw new Error(`API Hatası: ${response.status}`);
                }
                
                const data = await response.json();
                await new Promise(resolve => setTimeout(resolve, 400));
                
                return {
                    anime: data.data || [],
                    pagination: data.pagination || { last_visible_page: 1 }
                };
                
            } catch (error) {
                console.error('Arama Hatası:', error);
                showError('Arama sırasında hata oluştu.');
                return { anime: [], pagination: { last_visible_page: 1 } };
            } finally {
                showLoading(false);
            }
        }

        async function fetchAnimeDetails(animeId) {
            try {
                showLoading(true);
                
                const response = await fetch(`https://api.jikan.moe/v4/anime/${animeId}/full`);
                
                if (!response.ok) {
                    throw new Error(`API Hatası: ${response.status}`);
                }
                
                const data = await response.json();
                await new Promise(resolve => setTimeout(resolve, 400));
                
                return data.data;
                
            } catch (error) {
                console.error('Detay Hatası:', error);
                return null;
            } finally {
                showLoading(false);
            }
        }

        // ========== UI FONKSİYONLARI ==========
        function showLoading(show) {
            elements.loading.style.display = show ? 'block' : 'none';
            elements.animeGrid.style.display = show ? 'none' : 'grid';
            elements.pagination.style.display = show ? 'none' : 'flex';
        }

        function showError(message) {
            elements.animeGrid.innerHTML = `
                <div class="error-message">
                    <i class="fas fa-exclamation-triangle" style="font-size: 60px; margin-bottom: 30px;"></i>
                    <h3 style="margin-bottom: 20px;">${message}</h3>
                    <p style="font-size: 18px; color: rgba(255, 255, 255, 0.8);">
                        İnternet bağlantınızı kontrol edin ve sayfayı yenileyin.
                    </p>
                </div>
            `;
        }

        function renderAnimeList(animeList) {
            if (!animeList || animeList.length === 0) {
                elements.animeGrid.innerHTML = `
                    <div class="error-message">
                        <i class="fas fa-search" style="font-size: 60px; margin-bottom: 30px;"></i>
                        <h3 style="margin-bottom: 20px;">Anime bulunamadı</h3>
                        <p style="font-size: 18px; color: rgba(255, 255, 255, 0.8);">
                            Farklı bir arama terimi deneyin.
                        </p>
                    </div>
                `;
                return;
            }

            elements.animeGrid.innerHTML = animeList
                .filter(anime => filterByCategory(anime))
                .map(anime => createAnimeCard(anime))
                .join('');

            // Event listener'ları ekle
            attachEventListeners();
        }

        function filterByCategory(anime) {
            if (currentCategory === 'all') return true;
            
            if (!anime.genres || anime.genres.length === 0) return false;
            
            const genreNames = anime.genres.map(g => g.name.toLowerCase());
            return genreNames.some(name => name.includes(currentCategory));
        }

        function createAnimeCard(anime) {
            const isFavorited = favorites.some(fav => fav.id === anime.mal_id);
            const isWatched = watchHistory.some(w => w.id === anime.mal_id);
            
            const score = anime.score ? anime.score.toFixed(1) : 'N/A';
            const episodes = anime.episodes || '?';
            const year = anime.year || anime.aired?.prop?.from?.year || 'N/A';
            
            const genres = anime.genres ? 
                anime.genres.slice(0, 3).map(g => g.name) : [];
            
            const imageUrl = anime.images?.jpg?.large_image_url || 
                'https://via.placeholder.com/300x400/2f3542/ffffff?text=Resim+Yok';
            
            return `
                <div class="anime-card" data-id="${anime.mal_id}" data-title="${anime.title}">
                    ${isWatched ? '<div class="anime-badge">İZLENDİ</div>' : ''}
                    
                    <div class="anime-image-container">
                        <img src="${imageUrl}" 
                             alt="${anime.title}" 
                             class="anime-image"
                             onerror="this.src='https://via.placeholder.com/300x400/2f3542/ffffff?text=Resim+Yok'">
                        <div class="anime-score">⭐ ${score}</div>
                        <div class="anime-overlay">
                            <div style="color: white; font-size: 14px;">
                                ${truncateText(anime.synopsis || '', 100)}
                            </div>
                        </div>
                    </div>
                    
                    <div class="anime-info">
                        <h3 class="anime-title">${anime.title}</h3>
                        
                        <div class="anime-meta">
                            <span class="meta-item">
                                <i class="fas fa-tv"></i> ${anime.type || 'N/A'}
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-film"></i> ${episodes} Bölüm
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-calendar"></i> ${year}
                            </span>
                        </div>
                        
                        ${genres.length > 0 ? `
                            <div class="anime-genres">
                                ${genres.map(genre => `
                                    <span class="genre-tag">${genre}</span>
                                `).join('')}
                            </div>
                        ` : ''}
                        
                        <div class="anime-actions">
                            <button class="action-btn watch-btn" onclick="openWatchOptions(${anime.mal_id}, '${anime.title.replace(/'/g, "\\'")}')">
                                <i class="fas fa-play"></i> İZLE
                            </button>
                            <button class="action-btn details-btn" onclick="showAnimeDetails(${anime.mal_id})">
                                <i class="fas fa-info-circle"></i> Detay
                            </button>
                            <button class="action-btn favorite-btn ${isFavorited ? 'favorited' : ''}" 
                                    onclick="toggleFavorite(${anime.mal_id}, '${anime.title.replace(/'/g, "\\'")}', this)">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
        }

        async function showAnimeDetails(animeId) {
            const anime = await fetchAnimeDetails(animeId);
            
            if (!anime) {
                showNotification('Anime detayları yüklenemedi.', 'error');
                return;
            }
            
            elements.modalTitle.textContent = anime.title;
            
            const genres = anime.genres?.map(g => g.name).join(', ') || 'Belirtilmemiş';
            const studios = anime.studios?.map(s => s.name).join(', ') || 'Belirtilmemiş';
            const producers = anime.producers?.map(p => p.name).join(', ') || 'Belirtilmemiş';
            
            const watchPlatformsHTML = Object.entries(WATCH_PLATFORMS)
                .map(([name, platform]) => `
                    <a href="${platform.url}${encodeURIComponent(anime.title)}" 
                       target="_blank" 
                       class="platform-btn ${platform.color}">
                        <i class="${platform.icon}"></i>
                        <span>${name}'da İzle</span>
                    </a>
                `).join('');
            
            elements.modalBody.innerHTML = `
                <div>
                    <img src="${anime.images?.jpg?.large_image_url}" 
                         alt="${anime.title}" 
                         class="modal-image"
                         onerror="this.src='https://via.placeholder.com/350x500/2f3542/ffffff?text=Resim+Yok'">
                    
                    <div class="watch-section">
                        <h3 class="watch-title">
                            <i class="fas fa-play-circle"></i> Bu Animeyi İzle
                        </h3>
                        <p style="color: rgba(255, 255, 255, 0.8); margin-bottom: 20px;">
                            Animeyi izlemek için bir platform seçin:
                        </p>
                        <div class="watch-platforms">
                            ${watchPlatformsHTML}
                        </div>
                    </div>
                </div>
                
                <div class="modal-details">
                    <h3 style="color: var(--accent); font-size: 26px; margin-bottom: 20px;">Synopsis</h3>
                    <p style="font-size: 17px; line-height: 1.8;">${anime.synopsis || 'Açıklama bulunamadı.'}</p>
                    
                    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px; margin-top: 30px;">
                        <div class="detail-item">
                            <div class="detail-label">Tür</div>
                            <div class="detail-value">${anime.type || 'N/A'}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Bölümler</div>
                            <div class="detail-value">${anime.episodes || 'N/A'}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Durum</div>
                            <div class="detail-value">${anime.status || 'N/A'}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Skor</div>
                            <div class="detail-value">${anime.score ? anime.score.toFixed(2) : 'N/A'}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Sıralama</div>
                            <div class="detail-value">#${anime.rank || 'N/A'}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Popülerlik</div>
                            <div class="detail-value">#${anime.popularity || 'N/A'}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Yayın Tarihi</div>
                            <div class="detail-value">${anime.aired?.string || 'N/A'}</div>
                        </div>
                    </div>
                    
                    <h3 style="color: var(--accent); font-size: 26px; margin: 30px 0 15px;">Türler</h3>
                    <p style="font-size: 18px; color: rgba(255, 255, 255, 0.9);">${genres}</p>
                    
                    <h3 style="color: var(--accent); font-size: 26px; margin: 30px 0 15px;">Stüdyolar</h3>
                    <p style="font-size: 18px; color: rgba(255, 255, 255, 0.9);">${studios}</p>
                    
                    <h3 style="color: var(--accent); font-size: 26px; margin: 30px 0 15px;">Yapımcılar</h3>
                    <p style="font-size: 18px; color: rgba(255, 255, 255, 0.9);">${producers}</p>
                </div>
            `;
            
            openModal();
        }

        function openWatchOptions(animeId, animeTitle) {
            // İzleme geçmişine ekle
            addToWatchHistory(animeId, animeTitle);
            
            // Modal aç
            elements.modalTitle.textContent = `${animeTitle} - İzle`;
            
            const watchPlatformsHTML = Object.entries(WATCH_PLATFORMS)
                .map(([name, platform]) => `
                    <a href="${platform.url}${encodeURIComponent(animeTitle)}" 
                       target="_blank" 
                       class="platform-btn ${platform.color}"
                       onclick="trackWatchClick('${name}', '${animeTitle.replace(/'/g, "\\'")}')">
                        <i class="${platform.icon}"></i>
                        <span>${name}'da İzle</span>
                    </a>
                `).join('');
            
            elements.modalBody.innerHTML = `
                <div style="grid-column: 1 / -1; text-align: center; padding: 40px;">
                    <i class="fas fa-play-circle" style="font-size: 80px; color: var(--primary); margin-bottom: 30px;"></i>
                    <h2 style="font-size: 32px; margin-bottom: 20px;">${animeTitle}</h2>
                    <p style="font-size: 18px; color: rgba(255, 255, 255, 0.8); margin-bottom: 40px;">
                        İzlemek için bir platform seçin. Yeni sekmede açılacaktır.
                    </p>
                    
                    <div class="watch-platforms">
                        ${watchPlatformsHTML}
                    </div>
                    
                    <div style="margin-top: 50px; padding: 25px; background: rgba(255, 255, 255, 0.05); border-radius: 15px;">
                        <h3 style="color: var(--accent); margin-bottom: 15px;">
                            <i class="fas fa-info-circle"></i> Önemli Not
                        </h3>
                        <p style="color: rgba(255, 255, 255, 0.7);">
                            AnimeHub sadece yönlendirme sağlar. Tüm içerik hakları orijinal yayıncılara aittir.
                            Lütfen yasal platformları tercih edin.
                        </p>
                    </div>
                </div>
            `;
            
            openModal();
        }

        // ========== YARDIMCI FONKSİYONLAR ==========
        function getCurrentSeason() {
            const month = new Date().getMonth() + 1;
            if (month >= 3 && month <= 5) return 'spring';
            if (month >= 6 && month <= 8) return 'summer';
            if (month >= 9 && month <= 11) return 'fall';
            return 'winter';
        }

        function truncateText(text, maxLength) {
            if (!text) return '';
            if (text.length <= maxLength) return text;
            return text.substring(0, maxLength) + '...';
        }

        function toggleFavorite(animeId, animeTitle, button) {
            const index = favorites.findIndex(fav => fav.id == animeId);
            
            if (index === -1) {
                favorites.push({ id: animeId, title: animeTitle, date: new Date().toISOString() });
                button.classList.add('favorited');
                showNotification(`"${animeTitle}" favorilere eklendi!`, 'success');
            } else {
                favorites.splice(index, 1);
                button.classList.remove('favorited');
                showNotification(`"${animeTitle}" favorilerden çıkarıldı.`, 'info');
            }
            
            localStorage.setItem('animeFavorites', JSON.stringify(favorites));
        }

        function addToWatchHistory(animeId, animeTitle) {
            const existingIndex = watchHistory.findIndex(w => w.id == animeId);
            
            if (existingIndex !== -1) {
                watchHistory[existingIndex].lastWatched = new Date().toISOString();
                watchHistory[existingIndex].count += 1;
            } else {
                watchHistory.unshift({
                    id: animeId,
                    title: animeTitle,
                    firstWatched: new Date().toISOString(),
                    lastWatched: new Date().toISOString(),
                    count: 1
                });
                
                // En fazla 100 kayıt tut
                if (watchHistory.length > 100) {
                    watchHistory.pop();
                }
            }
            
            localStorage.setItem('watchHistory', JSON.stringify(watchHistory));
            
            // Kartı güncelle
            const card = document.querySelector(`.anime-card[data-id="${animeId}"]`);
            if (card && !card.querySelector('.anime-badge')) {
                const badge = document.createElement('div');
                badge.className = 'anime-badge';
                badge.textContent = 'İZLENDİ';
                card.prepend(badge);
            }
        }

        function trackWatchClick(platform, animeTitle) {
            console.log(`Kullanıcı ${animeTitle} izlemek için ${platform}'a tıkladı`);
            showNotification(`${animeTitle} ${platform}'da açılıyor...`, 'success');
            
            // Analytics tracking (gerçek uygulamada backend'e gönderilir)
            const analyticsData = {
                platform,
                animeTitle,
                timestamp: new Date().toISOString(),
                userAgent: navigator.userAgent
            };
            
            localStorage.setItem('lastWatchClick', JSON.stringify(analyticsData));
        }

        function showNotification(message, type = 'info') {
            // Var olan notification'ları temizle
            document.querySelectorAll('.notification').forEach(n => n.remove());
            
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.style.background = type === 'success' 
                ? 'linear-gradient(90deg, #2ed573, #7bed9f)' 
                : 'linear-gradient(90deg, var(--primary), #ff6b81)';
            
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'info-circle'}"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.add('slideOut');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        function openModal() {
            elements.animeModal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            elements.animeModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        function updatePagination() {
            elements.currentPage.textContent = currentPage;
            elements.prevBtn.disabled = currentPage <= 1;
            elements.nextBtn.disabled = currentPage >= totalPages;
        }

        function attachEventListeners() {
            // Detay butonları
            document.querySelectorAll('.details-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const animeId = e.target.closest('.anime-card').dataset.id;
                    showAnimeDetails(animeId);
                });
            });

            // İzle butonları
            document.querySelectorAll('.watch-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const card = e.target.closest('.anime-card');
                    const animeId = card.dataset.id;
                    const animeTitle = card.dataset.title;
                    openWatchOptions(animeId, animeTitle);
                });
            });
        }

        // ========== EVENT LISTENERS ==========
        elements.searchBtn.addEventListener('click', async () => {
            const searchTerm = elements.searchInput.value.trim();
            if (searchTerm) {
                currentSection = 'search';
                currentPage = 1;
                const result = await searchAnime(searchTerm, 1);
                renderAnimeList(result.anime);
                totalPages = result.pagination.last_visible_page || 1;
                updatePagination();
            }
        });

        elements.searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                elements.searchBtn.click();
            }
        });

        elements.prevBtn.addEventListener('click', async () => {
            if (currentPage > 1) {
                currentPage--;
                await loadCurrentSection();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        });

        elements.nextBtn.addEventListener('click', async () => {
            if (currentPage < totalPages) {
                currentPage++;
                await loadCurrentSection();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        });

        elements.navButtons.forEach(btn => {
            btn.addEventListener('click', async () => {
                if (btn.classList.contains('active')) return;
                
                elements.navButtons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                currentSection = btn.dataset.section;
                currentPage = 1;
                
                if (currentSection === 'favorites') {
                    // Favorileri göster
                    const favAnime = await Promise.all(
                        favorites.map(async fav => {
                            try {
                                const response = await fetch(`https://api.jikan.moe/v4/anime/${fav.id}`);
                                const data = await response.json();
                                return data.data;
                            } catch (error) {
                                console.error('Favori yükleme hatası:', error);
                                return null;
                            }
                        })
                    );
                    
                    const validAnime = favAnime.filter(a => a !== null);
                    renderAnimeList(validAnime);
                    elements.pagination.style.display = 'none';
                } else {
                    await loadCurrentSection();
                }
            });
        });

        elements.categoryButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                elements.categoryButtons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                currentCategory = btn.dataset.category;
                
                // Mevcut listeyi filtrele
                const animeCards = Array.from(document.querySelectorAll('.anime-card'));
                animeCards.forEach(card => {
                    card.style.display = currentCategory === 'all' ? 'block' : 'none';
                });
            });
        });

        elements.closeModal.addEventListener('click', closeModal);
        elements.animeModal.addEventListener('click', (e) => {
            if (e.target === elements.animeModal) {
                closeModal();
            }
        });

        async function loadCurrentSection() {
            const result = await fetchAnimeData(currentSection, currentPage);
            renderAnimeList(result.anime);
            totalPages = Math.min(result.pagination.last_visible_page || 100, 100);
            updatePagination();
        }

        // ========== UYGULAMA BAŞLATMA ==========
        async function initApp() {
            // Başlangıçta popüler animeleri yükle
            await loadCurrentSection();
            
            // Search input placeholder'ını dinamik yap
            const placeholders = [
                "Naruto",
                "Attack on Titan",
                "One Piece",
                "Demon Slayer",
                "My Hero Academia",
                "Death Note",
                "Jujutsu Kaisen",
                "Fullmetal Alchemist"
            ];
            
            let placeholderIndex = 0;
            setInterval(() => {
                elements.searchInput.placeholder = `"${placeholders[placeholderIndex]}" ara...`;
                placeholderIndex = (placeholderIndex + 1) % placeholders.length;
            }, 2500);
            
            // Favori sayısını göster
            updateFavoriteCount();
        }

        function updateFavoriteCount() {
            const favBtn = document.querySelector('.nav-btn[data-section="favorites"]');
            if (favBtn && favorites.length > 0) {
                favBtn.innerHTML = `<i class="fas fa-heart"></i> Favorilerim (${favorites.length})`;
            }
        }

        // Sayfa yüklendiğinde başlat
        document.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>
